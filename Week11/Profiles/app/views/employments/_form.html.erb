<div class="row">
  <div class="col-sm-6">
    <%= form_with(model: employment, local: true) do |form| %>
      <% if employment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(employment.errors.count, "error") %> prohibited this employment from being saved:</h2>

          <ul>
          <% employment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :company %>
        <%= form.text_field :company, class: "form-control", id: "company" %>
      </div>

      <div class="form-group">
        <%= form.label :role %>
        <%= form.text_field :role, class: "form-control", id: "role" %>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= form.label :start_date %>
            <%= form.date_field :start_date, class: "form-control", id: "start-date" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= form.label :end_date %>
            <%= form.date_field :end_date, class: "form-control", id: "end-date" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", maxLength: 600, id: "description" %>
        <p>Remaining Characters: 600 </p>
      </div>

      <div class="form-group">
        <%= form.submit "Save", class: "btn btn-primary", id: "save-button" %>
      </div>
    <% end %>
  </div>
</div>
